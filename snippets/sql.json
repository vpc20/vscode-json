{
	// Place your snippets for sql here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"If Statement": {
		"prefix": "if statement",
		"body": [
            "if ${1:condition1} then",
            "   ${2:sql_statement1};",
			"elseif ${3:condition2} then",
            "   ${4:sql_statement2};",
			"else",
            "   ${5:sql_statement3};",
            "end if;",
		],
		"description": "if statement"
	},

	"Case Statement 1": {
		"prefix": "case statement",
		"body": [
			"case ${1:var1}",
            "   when ${2:value1} then",
            "      ${3:sql_statement1};",
            "   when ${4:value2} then",
            "      ${5:sql_statement3};",
			"   else",
            "      ${6:sql_statement3};",
            "end case;",
		],
		"description": "case statement 1"
	},

	"Case Statement 2": {
		"prefix": "case statement",
		"body": [
			"case",
            "   when ${1:condition1} then",
            "      ${2:sql_statement1};",
            "   when ${3:condition2} then",
            "      ${4:sql_statement3};",
			"   else",
            "      ${5:sql_statement3};",
            "end case;",
		],
		"description": "case statement 2"
	},

	"While Statement": {
		"prefix": "while statement",
		"body": [
			"while ${1:condition} do",
            "   ${2:sql_statement};",
            "end while;",
		],
		"description": "while statement"
	},

	"Repeat Statement": {
		"prefix": "repeat statement",
		"body": [
			"repeat",
            "   ${1:sql_statement};",
            "   until ${2:condition}",
            "end repeat;",
		],
		"description": "repeat statement"
	},

	"For Statement": {
		"prefix": "for statement",
		"body": [
			"for ${1:cursor_name} cursor for",
			"   ${2:select_statement}",
		    "   do",
			"      ${3:sql_statement};",
		    "end for;",
		],
		"description": "for statement"
	},

}